@model AbsenViewModel
@{
    ViewData["Title"] = "Absen Edit Data";
}

<h2>Form Edit Absen</h2>

<form asp-action="Update" method="post">
    <div class="form-group">
        <label asp-for="Id">Absen Id</label>
        <input asp-for="Id" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Name">Absen Name</label>
        <input asp-for="Name" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Keterangan">Absen Keterangan</label>
        <input asp-for="Keterangan" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="TotalAbsen">Total Absen</label>
        <input asp-for="TotalAbsen" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
